#include<bits/stdc++.h>
using namespace std;

        // *** TIC-TAC-TOE Game in C++ ***

    char space[3][3]={{'1','2','3'},{'4','5','6'},{'7','8','9'}}; 
    int row,column;
    bool tie;;
    char token='X';
    string n1=" ";
    string n2=" "; 

   void fun1(){

// Drawing Lines
    cout<<"      |      |         \n";
    cout<<"  "<<space[0][0]<< "   |   "<<space[0][1]<<"  |   " << space[0][2]<<  "\n";
    cout<<"______|______|______   \n";
    cout<<"      |      |         \n";
    cout<<"  "<<space[1][0]<< "   |   "<<space[1][1]<<"  |   " << space[1][2]<<  "\n";
    cout<<"______|______|______   \n";
    cout<<"      |      |         \n";
    cout<<"  "<<space[2][0]<< "   |   "<<space[2][1]<<"  |   " << space[2][2]<<  "\n";
    cout<<"      |      |         \n";

    }

   void fun2(){

// Taking input form Players 
        int digit;
        if(token=='X'){
            cout<<n1<<" Please Enter : ";
            cin>>digit; 
        }
        if(token=='O'){
            cout<<n2<<" Please Enter : ";
            cin>>digit; 
        }

//Checking digit for every row and column
        if(digit==1){
            row=0;
            column=0;
        }
        if(digit==2){
            row=0;
            column=1;
        }if(digit==3){
            row=0;
            column=2;
        }if(digit==4){
            row=1;
            column=0;
        }if(digit==5){
            row=1;
            column=1;
        }if(digit==6){
            row=1;
            column=2;
        }if(digit==7){
            row=2;
            column=0;
        }if(digit==8){
            row=2;
            column=1;
        }if(digit==9){
            row=2;
            column=2;
        }

        else if(digit<1 || digit>9){
            cout<<"Invalid . . . \n";
        }

//Checking if there's any empty space left & filling it with that thing whose chance is there
    if(token=='X' && space[row][column] !='X' && space[row][column] != 'O'){
        space[row][column]='X';
        token='O';
    }
    else if(token=='O' && space[row][column] !='X' && space[row][column] != 'O'){
        space[row][column]='O';
        token='X';
    }else{
        cout<<"No Empty Space \n";
        fun2();
    }
    fun1();
    }

    bool fun3(){

// Win or Lose
    for(int i=0;i<3;i++){
        if(space[i][0]==space[i][1] && space[i][0]==space[i][2] || space[0][i]==space[1][i] && space[0][i]==space[2][i])
        return true;
    }
    if(space[0][0]==space[1][1] && space[1][1]==space[2][2] || space[0][2]==space[1][1] && space[1][1]==space[2][0]){
        return true;
    }

//Game still going on or finished    
    for(int i=0;i<3;i++){
        for(int j=0;j<3;j++){
            if(space[i][j] != 'X' && space[i][j] != 'O'){
                return false;
            }
        }
    }

// Is the game draw
    bool tie;
    tie=true;
    return false;
}

    int main(){

// Input Name of Players 
    bool tie;
    cout<<"Enter Name of Player 1 : ";
    getline(cin,n1);
    cout<<endl<<"Enter Name of Player 2 : ";
    getline(cin,n2);

    cout<<"Player1 - "<<n1<<" will play first  \n";
    cout<<"Player2 - "<<n2<<" will play second  \n";

    while(!fun3()){
        fun1();
        fun2();
        fun3();
    }
    if(token =='X' && tie==false){
        cout<<n2<<" Wins . . "<<endl;
    }
    else if(token=='O' && tie==false){
        cout<<n1<<" Wins . . "<<endl;
    }
    else{
        cout<<"Its DRAW . . "<<endl;
    }
}
   
